<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindSchool">

    <Button
        android:id="@+id/Simplemodebtn"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:text="Simple Mode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.383" />

    <Button
        android:id="@+id/Advancemodebtn"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:text="Advance Mode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Simplemodebtn"
        app:layout_constraintVertical_bias="0.384"
        android:onClick="AdvanceMode"/>
</androidx.constraintlayout.widget.ConstraintLayout>